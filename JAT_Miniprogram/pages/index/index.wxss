/**index.wxss**/
.container {
  padding-bottom: 120rpx;
}

/* 轮播图样式 */
.banner {
  width: 100%;
  height: 350rpx;
  margin-bottom: 20rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 服务分类导航 */
.category-nav {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  background-color: #FFFFFF;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.category-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 24rpx;
  color: var(--text-color);
}

/* 区块通用样式 */
.section {
  margin-bottom: 20rpx;
  background-color: #FFFFFF;
  border-radius: 8rpx;
  padding: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background-color: var(--primary-color);
  border-radius: 4rpx;
}

.section-more {
  font-size: 24rpx;
  color: var(--text-color-light);
  display: flex;
  align-items: center;
}

.icon-arrow {
  margin-left: 6rpx;
}

/* 推荐服务列表 */
.service-list {
  display: flex;
  flex-direction: column;
}

.service-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.service-item:last-child {
  border-bottom: none;
}

.service-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.service-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.service-name {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 10rpx;
}

.service-price-box {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.service-price {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-right: 10rpx;
}

.service-original-price {
  font-size: 24rpx;
  color: var(--text-color-light);
  text-decoration: line-through;
}

.service-tags {
  display: flex;
  flex-wrap: wrap;
}

/* 热门套餐列表 */
.package-list {
  display: flex;
  flex-direction: column;
}

.package-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.package-item:last-child {
  border-bottom: none;
}

.package-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.package-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.package-name {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 10rpx;
}

.package-desc {
  font-size: 24rpx;
  color: var(--text-color-light);
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.package-price-box {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.package-price {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-right: 10rpx;
}

.package-original-price {
  font-size: 24rpx;
  color: var(--text-color-light);
  text-decoration: line-through;
}

.package-count {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: var(--text-color-light);
}

.package-validity {
  color: var(--warning-color);
}

/* 技师推荐 */
.therapist-scroll {
  width: 100%;
  white-space: nowrap;
}

.therapist-list {
  display: inline-flex;
  padding: 10rpx 0;
}

.therapist-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 200rpx;
  margin-right: 20rpx;
}

.therapist-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.therapist-name {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 6rpx;
}

.therapist-title {
  font-size: 24rpx;
  color: var(--text-color-light);
  margin-bottom: 6rpx;
}

.therapist-rating {
  display: flex;
  align-items: center;
}

.rating-score {
  font-size: 24rpx;
  color: var(--primary-color);
  font-weight: bold;
  margin-right: 6rpx;
}

.rating-count {
  font-size: 22rpx;
  color: var(--text-color-light);
}

/* 店铺信息 */
.shop-info-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.shop-info-item:last-child {
  border-bottom: none;
}

.shop-info-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.shop-info-icon image {
  width: 100%;
  height: 100%;
}

.shop-info-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.shop-info-label {
  font-size: 24rpx;
  color: var(--text-color-light);
  margin-bottom: 6rpx;
}

.shop-info-value {
  font-size: 28rpx;
  color: var(--text-color);
}

.shop-info-arrow {
  color: var(--text-color-light);
}

/* 底部预约按钮 */
.appointment-btn-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #FFFFFF;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}
