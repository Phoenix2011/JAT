/**service/detail.wxss**/
.container {
  padding-bottom: 120rpx;
}

/* 服务图片轮播 */
.service-banner {
  width: 100%;
  height: 500rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 卡片通用样式 */
.card {
  background-color: #FFFFFF;
  border-radius: 8rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

/* 服务基本信息 */
.service-info {
  margin-top: -20rpx;
  border-radius: 20rpx 20rpx 8rpx 8rpx;
  position: relative;
  z-index: 10;
}

.service-name {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 20rpx;
}

.service-price-box {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.service-price {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-right: 15rpx;
}

.service-original-price {
  font-size: 28rpx;
  color: var(--text-color-light);
  text-decoration: line-through;
}

.service-stats {
  display: flex;
  margin-bottom: 15rpx;
}

.service-sales {
  font-size: 26rpx;
  color: var(--text-color-light);
  margin-right: 30rpx;
}

.service-rating {
  font-size: 26rpx;
  color: var(--text-color-light);
}

.service-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 15rpx;
}

/* 套餐卡信息 */
.package-info {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx dashed var(--border-color);
}

.package-item {
  display: flex;
  margin-bottom: 15rpx;
}

.package-item:last-child {
  margin-bottom: 0;
}

.package-label {
  width: 140rpx;
  font-size: 28rpx;
  color: var(--text-color-light);
}

.package-value {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-color);
}

/* 服务详情 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color);
  position: relative;
  padding-left: 20rpx;
  margin-bottom: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background-color: var(--primary-color);
  border-radius: 4rpx;
}

.detail-content {
  font-size: 28rpx;
  color: var(--text-color);
  line-height: 1.6;
}

/* 技师推荐 */
.therapist-scroll {
  width: 100%;
  white-space: nowrap;
}

.therapist-list {
  display: inline-flex;
  padding: 10rpx 0;
}

.therapist-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 200rpx;
  margin-right: 30rpx;
}

.therapist-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-bottom: 15rpx;
}

.therapist-name {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 6rpx;
}

.therapist-title {
  font-size: 24rpx;
  color: var(--text-color-light);
  margin-bottom: 6rpx;
}

.therapist-rating {
  display: flex;
  align-items: center;
}

.rating-score {
  font-size: 24rpx;
  color: var(--primary-color);
  font-weight: bold;
  margin-right: 6rpx;
}

.rating-count {
  font-size: 22rpx;
  color: var(--text-color-light);
}

/* 用户评价 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.review-stats {
  display: flex;
  align-items: center;
}

.review-rating {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-right: 10rpx;
}

.review-count {
  font-size: 26rpx;
  color: var(--text-color-light);
}

.review-list {
  margin-bottom: 20rpx;
}

.review-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.review-item:last-child {
  border-bottom: none;
}

.review-user {
  display: flex;
  margin-bottom: 15rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 6rpx;
}

.review-rating-time {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.star-rating {
  display: flex;
}

.star-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}

.review-time {
  font-size: 24rpx;
  color: var(--text-color-light);
}

.review-content {
  font-size: 28rpx;
  color: var(--text-color);
  line-height: 1.5;
  margin-bottom: 15rpx;
}

.review-images {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 15rpx;
}

.review-image {
  width: 160rpx;
  height: 160rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
}

.therapist-reply {
  background-color: #F8F8F8;
  padding: 15rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.reply-label {
  color: var(--primary-color);
  font-weight: bold;
  margin-right: 6rpx;
}

.reply-content {
  color: var(--text-color);
}

.empty-reviews {
  text-align: center;
  padding: 40rpx 0;
  font-size: 28rpx;
  color: var(--text-color-light);
}

.view-more-reviews {
  text-align: center;
  font-size: 28rpx;
  color: var(--primary-color);
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 6rpx;
}

/* 底部操作栏 */
.bottom-action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFFFFF;
  display: flex;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.action-buttons {
  display: flex;
  margin-right: 20rpx;
}

.action-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 6rpx;
}

.action-button text {
  font-size: 24rpx;
  color: var(--text-color-light);
}

.main-buttons {
  flex: 1;
  display: flex;
}

.main-buttons .btn {
  flex: 1;
  margin: 0 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}
