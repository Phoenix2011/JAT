/* pages/profile/invitation/index.wxss */

.invitation-container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 邀请码填写区域样式 */
.input-invitation-section {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 20rpx;
}

.input-form {
  display: flex;
  margin-bottom: 15rpx;
}

.invitation-input {
  flex: 1;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
}

.submit-btn {
  width: 160rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ff6b6b;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 8rpx;
  padding: 0;
}

.submit-btn[disabled] {
  background-color: #cccccc;
}

.input-tips {
  font-size: 24rpx;
  color: #999999;
}

/* 佣金统计区域样式 */
.commission-summary {
  display: flex;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.summary-item {
  flex: 1;
  text-align: center;
}

.summary-value {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.total .summary-value {
  color: #ff6b6b;
}

.available .summary-value {
  color: #4cd964;
}

.summary-label {
  font-size: 24rpx;
  color: #666666;
}

.frozen-amount {
  font-size: 22rpx;
  color: #999999;
}

/* 我的邀请码区域样式 */
.my-invitation-section {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.invitation-code-box {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.invitation-code {
  flex: 1;
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
  padding: 20rpx 0;
}

.copy-btn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #f8f8f8;
  color: #666666;
  font-size: 26rpx;
  border-radius: 30rpx;
  padding: 0;
}

.share-tips {
  font-size: 24rpx;
  color: #999999;
}

/* 提现按钮样式 */
.withdraw-section {
  margin-bottom: 30rpx;
}

.withdraw-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #ff6b6b;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
}

.withdraw-btn[disabled] {
  background-color: #cccccc;
}

/* 佣金记录标签页样式 */
.records-tabs {
  background-color: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tab-header {
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666666;
  padding: 25rpx 0;
  position: relative;
}

.tab-item.active {
  color: #ff6b6b;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #ff6b6b;
  border-radius: 2rpx;
}

.tab-content {
  min-height: 300rpx;
}

/* 记录列表样式 */
.record-list {
  padding: 0 20rpx;
}

.record-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.record-item:last-child {
  border-bottom: none;
}

.record-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.record-user, .record-status-text {
  font-size: 28rpx;
  color: #333333;
}

.record-time {
  font-size: 24rpx;
  color: #999999;
}

.record-detail {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.record-desc {
  font-size: 26rpx;
  color: #666666;
}

.record-amount {
  font-size: 30rpx;
  font-weight: 500;
  color: #ff6b6b;
}

.record-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  display: inline-block;
}

.record-status.frozen {
  background-color: #f8f8f8;
  color: #999999;
}

.record-status.unfrozen {
  background-color: #e6f7ed;
  color: #4cd964;
}

.record-ratio, .record-actual {
  font-size: 24rpx;
  color: #666666;
}

/* 空状态提示 */
.empty-tip {
  padding: 60rpx 0;
  text-align: center;
}

.empty-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}
