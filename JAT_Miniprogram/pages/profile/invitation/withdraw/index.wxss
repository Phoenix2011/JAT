/* pages/profile/invitation/withdraw/index.wxss */

.withdraw-container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 佣金信息区域样式 */
.commission-info {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.info-item {
  margin-bottom: 20rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.info-value {
  font-size: 40rpx;
  font-weight: 500;
  color: #ff6b6b;
}

.info-tip {
  font-size: 24rpx;
  color: #999999;
  margin-top: 5rpx;
}

/* 提现金额输入区域样式 */
.withdraw-amount-section {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 20rpx;
}

.amount-input-area {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.currency-symbol {
  font-size: 40rpx;
  font-weight: 500;
  color: #333333;
  margin-right: 10rpx;
}

.amount-input {
  flex: 1;
  height: 80rpx;
  font-size: 40rpx;
  font-weight: 500;
}

.amount-tips {
  margin-bottom: 20rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.highlight {
  color: #ff6b6b;
  font-weight: 500;
}

.quick-actions {
  display: flex;
  justify-content: flex-end;
}

.quick-btn {
  font-size: 26rpx;
  color: #ff6b6b;
  background-color: #fff0f0;
  border-radius: 30rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
}

/* 提现方式选择样式 */
.withdraw-method-section {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.method-item {
  display: flex;
  align-items: center;
}

.method-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.method-icon image {
  width: 60rpx;
  height: 60rpx;
}

.method-info {
  flex: 1;
}

.method-name {
  font-size: 30rpx;
  color: #333333;
  margin-bottom: 6rpx;
}

.method-desc {
  font-size: 24rpx;
  color: #999999;
}

.method-selected {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 提现须知样式 */
.withdraw-notice {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.notice-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 20rpx;
}

.notice-content {
  padding-left: 10rpx;
}

.notice-item {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

/* 提现按钮样式 */
.withdraw-action {
  padding: 30rpx 0;
}

.withdraw-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #ff6b6b;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
}

.withdraw-btn[disabled] {
  background-color: #cccccc;
}
