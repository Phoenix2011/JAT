/* pages/profile/card/index.wxss */

.card-container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 筛选区域样式 */
.filter-section {
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.checkbox {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666666;
}

/* 卡项列表样式 */
.card-list {
  margin-bottom: 30rpx;
}

.card-item {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-used {
  opacity: 0.7;
  background-color: #f5f5f5;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.card-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background-color: #cccccc;
  color: #ffffff;
}

.card-active {
  background-color: #4cd964;
}

.card-info {
  margin-bottom: 20rpx;
}

.card-count, .card-validity {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 10rpx;
}

.count-value, .validity-value {
  color: #333333;
  font-weight: 500;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.card-price {
  font-size: 34rpx;
  font-weight: 500;
  color: #ff6b6b;
}

.card-actions {
  display: flex;
}

.action-btn {
  margin-left: 20rpx;
  font-size: 24rpx;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  background-color: #ffffff;
}

.transfer-btn {
  color: #ff6b6b;
  border: 1rpx solid #ff6b6b;
}

.detail-btn {
  color: #666666;
  border: 1rpx solid #cccccc;
}

/* 空状态提示 */
.empty-tip {
  padding: 100rpx 0;
  text-align: center;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 购买按钮 */
.buy-section {
  padding: 30rpx 0;
}

.buy-button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #ff6b6b;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.modal-content {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  z-index: 1001;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.modal-close {
  font-size: 40rpx;
  color: #999999;
  padding: 0 10rpx;
}

.modal-body {
  padding: 30rpx;
  max-height: 70vh;
  overflow-y: auto;
}

/* 卡项详情样式 */
.detail-item {
  display: flex;
  margin-bottom: 20rpx;
}

.detail-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #999999;
}

.detail-value {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.usage-records {
  margin-top: 30rpx;
}

.usage-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 20rpx;
}

.usage-list {
  border-top: 1rpx solid #f0f0f0;
}

.usage-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.usage-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.usage-service {
  font-size: 28rpx;
  color: #333333;
}

.usage-time {
  font-size: 24rpx;
  color: #999999;
}

.usage-therapist {
  font-size: 26rpx;
  color: #666666;
}

.empty-usage {
  padding: 30rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
}

/* 转赠弹窗样式 */
.transfer-info {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.transfer-card-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 10rpx;
}

.transfer-card-count {
  font-size: 26rpx;
  color: #666666;
}

.transfer-form {
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.form-tips {
  font-size: 24rpx;
  color: #ff6b6b;
  margin-top: 20rpx;
}

.transfer-actions {
  display: flex;
  justify-content: space-between;
}

.cancel-btn, .confirm-btn {
  width: 45%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666666;
}

.confirm-btn {
  background-color: #ff6b6b;
  color: #ffffff;
}

.confirm-btn[disabled] {
  background-color: #cccccc;
  color: #ffffff;
}
