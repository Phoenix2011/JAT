/**login.wxss**/
.container {
  padding: 40rpx 30rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
  padding-top: 40rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-color-light);
}

.login-form {
  width: 100%;
}

.form-group {
  background-color: #FFFFFF;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: var(--text-color-light);
  margin-bottom: 15rpx;
}

.form-input {
  width: 100%;
  height: 90rpx;
  border-bottom: 1rpx solid var(--border-color);
  font-size: 32rpx;
  color: var(--text-color);
}

.verification-code {
  position: relative;
}

.code-btn {
  position: absolute;
  right: 0;
  bottom: 20rpx;
  background-color: transparent;
  color: var(--primary-color);
  font-size: 28rpx;
  padding: 0;
  line-height: 1;
  border: none;
  min-height: 0;
}

.code-btn::after {
  border: none;
}

.code-btn.disabled {
  color: var(--text-color-light);
}

.login-btn {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.agreement {
  font-size: 24rpx;
  color: var(--text-color-light);
  margin-bottom: 60rpx;
  display: flex;
  align-items: center;
}

.agreement checkbox {
  transform: scale(0.8);
  margin-right: 5rpx;
}

.agreement-text {
  margin-right: 5rpx;
}

.agreement-link {
  color: var(--primary-color);
  margin-right: 5rpx;
}

.login-footer {
  width: 100%;
}

.divider {
  position: relative;
  text-align: center;
  margin: 40rpx 0;
}

.divider::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  width: 100%;
  height: 1rpx;
  background-color: var(--border-color);
  z-index: 1;
}

.divider-text {
  position: relative;
  display: inline-block;
  padding: 0 20rpx;
  background-color: var(--background-color);
  color: var(--text-color-light);
  font-size: 24rpx;
  z-index: 2;
}

.other-login {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.wechat-login-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: transparent;
  padding: 0;
  line-height: 1;
  color: var(--text-color);
  font-size: 24rpx;
}

.wechat-login-btn::after {
  border: none;
}

.wechat-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.register-link {
  text-align: center;
  font-size: 28rpx;
  color: var(--text-color-light);
}

.link {
  color: var(--primary-color);
  margin-left: 10rpx;
}
